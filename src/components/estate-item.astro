<article
  class={[
    'group relative flex h-full flex-col justify-between rounded-3xl bg-white p-4 shadow-sm transition-shadow hover:shadow-lg',
    { 'pointer-events-none opacity-15': isHidden },
  ]}
>
  <header>
    <div class="group relative mb-6 overflow-hidden border border-blue-300">
      {/* OBRÁZEK – ODKAZ NA DETAIL */}
      <a href={`/${estate.slug}/`} tabindex="-1">
        <span class="aspect-101/64 w-full object-cover transition ease-out">
          <CldImage
            src={estate.thumbnail}
            width={404}
            height={256}
            alt={estate.title}
            loading="lazy"
          />
        </span>
      </a>

      {/* Štítek typu (prodej/pronájem atd.) */}
      <div class="absolute left-4 top-4 rounded-full bg-white/90 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-blue-600 shadow-sm">
        {estate.type}
      </div>
    </div>

    {/* NADPIS – TAKY ODKAZ NA DETAIL */}
    <h3 class="mb-2 font-cabinet-grotesk text-lg font-semibold">
      <a
        class="text-black transition hover:text-blue-700"
        href={`/${estate.slug}/`}
      >
        {estate.title}
      </a>
    </h3>
  </header>

  <footer class="mt-3 flex items-center justify-between gap-3">
    <div class="text-sm font-medium text-gray-900">
      <span>{estate.location}</span>

      <div class="mt-2 flex flex-wrap gap-2">
        {
          estate.tags.map((tag) => (
            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600">
              {tag}
            </span>
          ))
        }
      </div>

      <div class="mt-2 flex items-center">
        <span
          class="relative inline-flex text-xl text-blue-500 before:absolute before:-inset-2 before:-z-10 before:rounded-full before:bg-sky-200 before:opacity-30 dark:before:bg-sky-500"
        >
          {estate.price}
        </span>
      </div>
    </div>

    {/* VOLITELNÉ TLAČÍTKO – ODKAZ NA DETAIL */}
    <div class="mt-2">
      <a
        href={`/${estate.slug}/`}
        class="inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-700"
      >
        Zobrazit detail →
      </a>
    </div>
  </footer>
</article>
