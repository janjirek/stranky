---
import { Image } from 'astro:assets';
// Zde použijeme vaše původní obdélníkové logo, protože teď na něj bude místo!
import Logo from './logo.astro'; 
import MobileMenu from './mobile-menu.tsx';
import Dropdown from './dropdown.tsx';

import '@fontsource/inter/500.css';
import '@fontsource/inter/700.css';
import '@fontsource/inter/800.css';

export const metadata = {
  title: 'Realitní Makléř Ing. Jan Jírek',
  description: 'Prodej a pronájem bytů, domů a pozemků v Pardubicích, Hradci Králové a okolí.',
};

const sluzbyItems = [
  { href: '/sluzby/prodej', label: 'Prodej Nemovitostí' },
  { href: '/sluzby/pronajem', label: 'Pronájem Nemovitostí' },
  { href: '/sluzby/dedictvi', label: 'Dědické Řízení' },
];
---

<header class="fixed top-0 z-30 w-full bg-white/95 shadow-sm backdrop-blur-md transition-all duration-300 border-b border-gray-100">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <div class="flex h-20 items-center justify-between gap-6">
      
      <div class="flex flex-shrink-0 items-center">
        <Logo />
      </div>

      <nav class="hidden md:flex md:grow justify-center">
        <ul class="flex flex-wrap items-center gap-6 text-sm font-medium lg:gap-8">
          <li>
            <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors">
              Úvod
            </a>
          </li>
          <li>
            <a href="/o-mne" class="text-gray-700 hover:text-blue-600 transition-colors">
              O mně
            </a>
          </li>
          <li>
            <a href="/reference" class="text-gray-700 hover:text-blue-600 transition-colors">
              Reference
            </a>
          </li>
          <li>
            <a href="/nemovitosti" class="text-gray-700 hover:text-blue-600 transition-colors">
              Nabídka Nemovitostí
            </a>
          </li>
          <li>
            <Dropdown client:load label="Služby" items={sluzbyItems} />
          </li>
          <li>
            <a href="/clanky" class="text-gray-700 hover:text-blue-600 transition-colors">
              Články
            </a>
          </li>
          <li>
            <a href="/zakazky" class="text-gray-700 hover:text-blue-600 transition-colors">
              Realizované Zakázky
            </a>
          </li>
        </ul>
      </nav>

      <div class="hidden md:flex items-center justify-end gap-3">
        <a href="/kontakt" class="btn-sm bg-gray-900 text-white shadow-lg hover:bg-blue-600 hover:shadow-xl transition-all duration-300 px-6 py-2.5 rounded-full">
          Kontakt
        </a>
      </div>

      <div class="flex md:hidden">
         <MobileMenu client:load />
      </div>
      
    </div>
  </div>
</header>