---
import PageIllustration from '@/components/page-illustration.astro';
---

<section class="relative">
  <PageIllustration />
  <div class="relative mx-auto max-w-3xl px-4 sm:px-6">
    <div class="pb-12 pt-32 md:pb-16 md:pt-40">
      <div class="max-w-3xl">
        <article>
          <header>
            <!-- Title and excerpt -->
            <div class="text-center">
              <h1
                class="mb-6 border-y font-cabinet-grotesk text-5xl font-bold [border-image:linear-gradient(to_right,transparent,--theme(--color-slate-300/.8),transparent)1] md:text-6xl"
              >
                Co o mně říkají moji klienti
              </h1>
            </div>
          </header>
        </article>
      </div>
    </div>
  </div>
</section>
