---
import Layout from '@/layouts/Layout.astro';
// Cesta k JSONu (upravte ../.. podle umístění souboru)
import referencesData from '../../content/general/references.json'; 

export const metadata = {
  title: 'Reference klientů | Ing. Jan Jírek',
  description: 'Přečtěte si zkušenosti mých klientů s prodejem a pronájmem nemovitostí.',
};

// Seřadíme reference od nejnovější
const sortedReferences = [...referencesData].sort((a, b) => b.id - a.id);
---

<Layout
  title={metadata.title}
  description={metadata.description}
>
  <section class="relative pt-32 pb-12 lg:pt-40 lg:pb-16 bg-white dark:bg-slate-900 overflow-hidden">
     <div class="relative z-10 mx-auto max-w-6xl px-4 sm:px-6 text-center">
        <h1 class="text-3xl md:text-4xl font-bold font-cabinet-grotesk text-slate-900 dark:text-white mb-6" data-aos="fade-up">
           Co o mně říkají klienti
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto leading-relaxed" data-aos="fade-up" data-aos-delay="100">
           Za svou prací si stojím. A stojí za ní i celá řada spokojených klientů, kterým jsem pomohl s bydlením.
        </p>
     </div>
  </section>

  <section class="py-10 bg-slate-50 dark:bg-slate-900/50 border-y border-slate-100 dark:border-slate-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h3 class="text-2xl font-bold font-cabinet-grotesk text-slate-900 dark:text-white mb-8">Ověřeno na portálech</h3>
      
      <div class="grid sm:grid-cols-2 gap-6">
          
          <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-8 flex flex-col items-center justify-between text-center shadow-sm hover:shadow-md transition-all h-full">
              <div class="w-full flex flex-col items-center">
                  <a href="https://www.firmy.cz/detail/13674362-ing-jan-jirek-realitni-makler-pardubice-zelene-predmesti.html" target="_blank" class="mb-4 block hover:opacity-80 transition-opacity h-12 flex items-center justify-center">
                      <img src="https://www.firmy.cz/img-stars/light-13674362.svg" alt="Firmy.cz" class="h-10 w-auto object-contain" />
                  </a>
                  <div class="text-sm text-slate-500 mb-6 font-medium">Průměrné hodnocení 5.0/5</div>
              </div>
              
              <a href="https://www.firmy.cz/detail/13674362-ing-jan-jirek-realitni-makler-pardubice-zelene-predmesti.html#napsat-hodnoceni" target="_blank" class="inline-flex items-center justify-center px-6 py-2.5 bg-red-600 hover:bg-red-700 text-white text-sm font-bold rounded-lg shadow-sm transition-colors w-48">
                  Napsat recenzi
              </a>
          </div>

          <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-8 flex flex-col items-center justify-between text-center shadow-sm hover:shadow-md transition-all h-full">
              <div class="w-full flex flex-col items-center">
                  <a href="https://share.google/VWeqhidrrhP7A4KMi" target="_blank" class="mb-2 block hover:opacity-80 transition-opacity h-12 flex items-center justify-center">
                      <div class="flex items-center justify-center gap-2">
                          <svg class="w-8 h-8" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.84z" fill="#FBBC05"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/></svg>
                          <span class="font-bold text-slate-700 dark:text-white text-xl">Google</span>
                      </div>
                  </a>
                  <div class="flex text-yellow-400 text-lg mb-1 justify-center">★★★★★</div>
                  <div class="text-sm text-slate-500 mb-6 font-medium">Hodnocení klientů</div>
              </div>
              
              <a href="https://g.page/r/CWRJi99OGhvdEBM/review" target="_blank" class="inline-flex items-center justify-center px-6 py-2.5 bg-blue-600 hover:bg-blue-700 text-white text-sm font-bold rounded-lg shadow-sm transition-colors w-48">
                  Napsat recenzi
              </a>
          </div>

      </div>
    </div>
  </section>

  <section class="py-16 bg-white dark:bg-slate-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6">
      
      <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
        
        {sortedReferences.map((item) => (
            <div class="break-inside-avoid bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-sm border border-slate-100 dark:border-slate-700 hover:shadow-lg transition-all duration-300 flex flex-col" data-aos="fade-up">
                
                <p class="text-slate-700 dark:text-slate-200 mb-6 leading-relaxed text-[15px]">
                    {item.content}
                </p>

                <div class="mt-auto flex items-center pt-6 border-t border-slate-100 dark:border-slate-700">
                    <div class="w-10 h-10 rounded-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center text-slate-500 dark:text-slate-300 font-bold text-sm mr-3 flex-shrink-0">
                        {item.fullname.charAt(0)}
                    </div>
                    <div>
                        <h4 class="font-bold text-slate-900 dark:text-white text-sm">{item.fullname}</h4>
                        <span class="text-xs text-slate-400 block">Ověřený klient</span>
                    </div>
                </div>

            </div>
        ))}

      </div>
    </div>
  </section>

  <section class="px-4 sm:px-6 pb-20 bg-white dark:bg-slate-900">
    <div class="w-full max-w-6xl mx-auto mt-12" data-aos="fade-up">
      <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-3xl p-10 md:p-16 text-center text-white shadow-2xl relative overflow-hidden">
          
          <div class="absolute top-0 right-0 -mr-20 -mt-20 w-80 h-80 rounded-full bg-blue-500 opacity-10 blur-2xl"></div>
          <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-60 h-60 rounded-full bg-white opacity-5 blur-2xl"></div>

          <h3 class="text-3xl md:text-4xl font-cabinet-grotesk font-bold mb-6 relative z-10">
              Chcete se také zařadit mezi spokojené klienty?
          </h3>
          
          <p class="text-slate-300 text-lg mb-10 max-w-2xl mx-auto relative z-10">
              Ať už prodáváte, pronajímáte nebo řešíte dědictví, postarám se o to, aby byl celý proces pro vás bez starostí a s perfektním výsledkem.
          </p>
          
          <div class="flex justify-center relative z-10">
              <a href="/kontakt" class="inline-flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-10 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                  Kontaktovat mě
              </a>
          </div>
      </div>
    </div>
  </section>

</Layout>