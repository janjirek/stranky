---
import Layout from '@/layouts/Layout.astro';

// ZMĚNA: Správná cesta k JSONu
import referencesData from '../../content/general/references.json';

export const metadata = {
  title: 'Reference klientů | Ing. Jan Jírek',
  description: 'Přečtěte si zkušenosti mých klientů s prodejem a pronájmem nemovitostí.',
};

// Pouze seřadíme reference od nejnovější
const sortedReferences = [...referencesData].sort((a, b) => b.id - a.id);
---

<Layout
  title={metadata.title}
  description={metadata.description}
>
  <section class="relative pt-32 pb-12 lg:pt-40 lg:pb-16 bg-white dark:bg-slate-900 overflow-hidden">
     <div class="relative z-10 mx-auto max-w-6xl px-4 sm:px-6 text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 dark:text-white sm:text-5xl md:text-6xl font-cabinet-grotesk mb-6">
           Co o mně říkají <span class="text-blue-600">klienti</span>
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-3xl mx-auto">
           Za svou prací si stojím. A stojí za ní i celá řada spokojených klientů, kterým jsem pomohl s bydlením.
        </p>
     </div>
  </section>

  <section class="py-8 bg-slate-50 dark:bg-slate-900/50 border-y border-slate-100 dark:border-slate-800">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col md:flex-row gap-8 items-center justify-center">
        
        <div class="w-full md:w-1/2 h-64 rounded-2xl overflow-hidden border border-slate-200 dark:border-slate-700 shadow-sm bg-white">
          <iframe
            class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2562.533892059754!2d15.767335677478632!3d50.03882921691461!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6cf9f1714980ad9f%3A0xdd1b1a4edf8b4964!2zSW5nLiBKYW4gSsOtcmVrIOKAkyByZWFsaXRuw60gbWFrbMOpxZk!5e0!3m2!1scs!2scz!4v1753173552483!5m2!1scs!2scz"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>

        <div class="w-full md:w-1/3 flex flex-col items-center text-center p-6 bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 shadow-sm">
            <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-1">Ověřeno klienty</h3>
            <p class="text-sm text-slate-500 dark:text-slate-400 mb-4">Hodnocení na Firmy.cz</p>
            
            <div class="hover:scale-105 transition-transform duration-300">
              <a
                href="https://www.firmy.cz/detail/13674362-ing-jan-jirek-realitni-makler-pardubice-zelene-predmesti.html#hodnoceni"
                target="_blank"
                rel="noopener"
                class="block"
              >
                <img
                  src="https://www.firmy.cz/img-stars/light-13674362.svg"
                  alt="Ing. Jan Jírek – realitní makléř na Firmy.cz"
                  width="200"
                  height="50"
                />
              </a>
            </div>
            
            <a href="https://www.firmy.cz/detail/13674362-ing-jan-jirek-realitni-makler-pardubice-zelene-predmesti.html#napsat-hodnoceni" target="_blank" class="mt-4 inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-700">
                Napsat hodnocení 
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
            </a>
        </div>

      </div>
    </div>
  </section>

  <section class="py-16 bg-white dark:bg-slate-900">
    <div class="mx-auto max-w-7xl px-4 sm:px-6">
      
      <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
        
        {sortedReferences.map((item) => (
            <div class="break-inside-avoid bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-sm border border-slate-100 dark:border-slate-700 hover:shadow-md transition-all duration-300 flex flex-col group">
                
                <div class="mb-4">
                    <svg class="w-10 h-10 text-blue-100 dark:text-slate-700 fill-current group-hover:text-blue-200 transition-colors" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V11C14.017 11.5523 13.5693 12 13.017 12H12.017V5H22.017V15C22.017 18.3137 19.3307 21 16.017 21H14.017ZM5.0166 21L5.0166 18C5.0166 16.8954 5.91203 16 7.0166 16H10.0166C10.5689 16 11.0166 15.5523 11.0166 15V9C11.0166 8.44772 10.5689 8 10.0166 8H6.0166C5.46432 8 5.0166 8.44772 5.0166 9V11C5.0166 11.5523 4.56889 12 4.0166 12H3.0166V5H13.0166V15C13.0166 18.3137 10.3303 21 7.0166 21H5.0166Z"></path>
                    </svg>
                </div>

                <p class="text-slate-600 dark:text-slate-300 mb-6 leading-relaxed text-[15px] italic">
                    "{item.content}"
                </p>

                <div class="mt-auto flex items-center pt-6 border-t border-slate-100 dark:border-slate-700">
                    <div class="w-10 h-10 rounded-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center text-slate-500 dark:text-slate-300 font-bold text-sm mr-3 flex-shrink-0 shadow-sm">
                        {item.fullname.charAt(0)}
                    </div>
                    <div>
                        <h4 class="font-bold text-slate-900 dark:text-white text-sm">{item.fullname}</h4>
                        <span class="text-xs text-slate-400 block">Ověřený klient</span>
                    </div>
                </div>

            </div>
        ))}

      </div>
    </div>
  </section>

  <section class="px-4 sm:px-6 pb-20 bg-white dark:bg-slate-900">
    <div class="w-full max-w-6xl mx-auto mt-12 data-aos="fade-up">
      <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-3xl p-10 md:p-16 text-center text-white shadow-2xl relative overflow-hidden">
          
          <div class="absolute top-0 right-0 -mr-20 -mt-20 w-80 h-80 rounded-full bg-blue-500 opacity-10 blur-2xl"></div>
          <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-60 h-60 rounded-full bg-white opacity-5 blur-2xl"></div>

          <h3 class="text-3xl md:text-4xl font-cabinet-grotesk font-bold mb-6 relative z-10">
              Chcete se také zařadit mezi spokojené klienty?
          </h3>
          
          <p class="text-slate-300 text-lg mb-10 max-w-2xl mx-auto relative z-10">
              Ať už prodáváte, pronajímáte nebo řešíte dědictví, postarám se o to, aby byl celý proces pro vás bez starostí a s perfektním výsledkem.
          </p>
          
          <div class="flex justify-center relative z-10">
              <a href="/kontakt" class="inline-flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-10 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                  Kontaktovat mě
              </a>
          </div>
      </div>
    </div>
  </section>

</Layout>